generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model product {
  id            Int  @id @default(autoincrement())
  name          String
  company       String
  description   String
  featured      Boolean
  category      String
  imageUrl      String
  price         Int
  shipping      Boolean
  colors        String[]
}